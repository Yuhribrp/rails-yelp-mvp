<div class="container my-5">
	<h1><%= @restaurant.name %></h1>
	<p>Address: <%= @restaurant.address %></p>
	<p>Phone Number: <%= @restaurant.phone_number %></p>
	<h3><%= @restaurant.category %></h3>
	<%= link_to 'Write a Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary my-3"  %>
	<%= link_to 'Back to Restaurants', restaurants_path, class: "btn btn-primary my-3"%>
</div>

<div class="container">
	<h4>Reviews</h4>
	<% @restaurant.reviews.each do |review| %>
	<h5 class="list-group-item"><%= review.content %></h5>
	<h5 class="list-group-item">Rating: <%= review.rating %></h5>
</div>
<% end %>